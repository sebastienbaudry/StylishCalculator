<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Colors -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B3FFFFFF</Color> <!-- 70% white -->
    
    <!-- Neon Colors -->
    <Color x:Key="NeonCyan">#00FFFF</Color>
    <Color x:Key="NeonMagenta">#FF00FF</Color>
    <Color x:Key="NeonGreen">#00FF00</Color>
    <Color x:Key="NeonYellow">#FFFF00</Color>
    
    <!-- Darker Neon Variants for Hover States -->
    <Color x:Key="DarkNeonCyan">#00CCCC</Color>
    <Color x:Key="DarkNeonMagenta">#CC00CC</Color>
    <Color x:Key="DarkNeonGreen">#00CC00</Color>
    <Color x:Key="DarkNeonYellow">#CCCC00</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    
    <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyan}"/>
    <SolidColorBrush x:Key="NeonMagentaBrush" Color="{StaticResource NeonMagenta}"/>
    <SolidColorBrush x:Key="NeonGreenBrush" Color="{StaticResource NeonGreen}"/>
    <SolidColorBrush x:Key="NeonYellowBrush" Color="{StaticResource NeonYellow}"/>
    
    <SolidColorBrush x:Key="DarkNeonCyanBrush" Color="{StaticResource DarkNeonCyan}"/>
    <SolidColorBrush x:Key="DarkNeonMagentaBrush" Color="{StaticResource DarkNeonMagenta}"/>
    <SolidColorBrush x:Key="DarkNeonGreenBrush" Color="{StaticResource DarkNeonGreen}"/>
    <SolidColorBrush x:Key="DarkNeonYellowBrush" Color="{StaticResource DarkNeonYellow}"/>
    
    <!-- Transparent Brushes for Glass Effect -->
    <SolidColorBrush x:Key="TransparentBackgroundBrush" Color="{StaticResource BackgroundColor}" Opacity="0.2"/>
    <SolidColorBrush x:Key="TransparentSurfaceBrush" Color="{StaticResource SurfaceColor}" Opacity="0.3"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="CyanGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource NeonCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource DarkNeonCyan}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="MagentaGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource NeonMagenta}" Offset="0"/>
        <GradientStop Color="{StaticResource DarkNeonMagenta}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GreenGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource NeonGreen}" Offset="0"/>
        <GradientStop Color="{StaticResource DarkNeonGreen}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="YellowGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource NeonYellow}" Offset="0"/>
        <GradientStop Color="{StaticResource DarkNeonYellow}" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>