<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Glass Button Style -->
    <Style x:Key="GlassButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource TransparentSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Background with blur effect -->
                        <Border x:Name="BackgroundBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <BlurEffect Radius="2"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Main button border with glow -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" TargetName="ButtonBorder" Value="1.0"/>
                            <Setter Property="Background" TargetName="ButtonBorder" Value="{StaticResource TransparentSurfaceBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="RenderTransform" TargetName="ButtonBorder">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Effect" TargetName="ButtonBorder">
                                <Setter.Value>
                                    <DropShadowEffect Direction="315" ShadowDepth="1" BlurRadius="3" Opacity="0.5" Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Number Button Style -->
    <Style x:Key="NumberButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource NeonCyan}" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Operation Button Style -->
    <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource NeonMagentaBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeonMagentaBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource NeonMagenta}" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Equals Button Style -->
    <Style x:Key="EqualsButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource NeonGreenBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeonGreenBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource NeonGreen}" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Function Button Style -->
    <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource NeonYellowBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeonYellowBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource NeonYellow}" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Toggle Button Style -->
    <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="{StaticResource TransparentSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonYellowBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!-- Background with blur effect -->
                        <Border x:Name="BackgroundBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <BlurEffect Radius="2"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Main button border with glow -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" TargetName="ButtonBorder" Value="1.0"/>
                            <Setter Property="Background" TargetName="ButtonBorder" Value="{StaticResource TransparentSurfaceBrush}"/>
                            <Setter Property="Effect" TargetName="ButtonBorder">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource NeonYellow}" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" TargetName="ButtonBorder">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource NeonYellow}" Opacity="0.2"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Effect" TargetName="ButtonBorder">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource NeonYellow}" Direction="0" ShadowDepth="0" BlurRadius="15" Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="RenderTransform" TargetName="ButtonBorder">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>