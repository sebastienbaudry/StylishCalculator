<UserControl x:Class="StylishCalculator.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StylishCalculator.Views"
             xmlns:vm="clr-namespace:StylishCalculator.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="560" d:DesignWidth="400">
    
    <UserControl.DataContext>
        <vm:MainViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <!-- Animation for button press -->
        <Storyboard x:Key="ButtonPressAnimation">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                             From="1.0" To="0.95" Duration="0:0:0.1" 
                             AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                             From="1.0" To="0.95" Duration="0:0:0.1" 
                             AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Display Area -->
            <RowDefinition Height="*"/> <!-- Buttons Area -->
            <RowDefinition Height="Auto"/> <!-- Currency Toggle -->
            <RowDefinition Height="Auto"/> <!-- Currency Panel -->
        </Grid.RowDefinitions>
        
        <!-- Display Area -->
        <Border Grid.Row="0" 
                Background="{StaticResource TransparentSurfaceBrush}" 
                CornerRadius="10" 
                Margin="10,10,10,5"
                BorderThickness="1"
                BorderBrush="#333333">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Expression Display -->
                <TextBlock Grid.Row="0" 
                           Text="{Binding CurrentExpression}" 
                           Style="{StaticResource SecondaryDisplayTextBlockStyle}"/>
                
                <!-- Main Display -->
                <TextBlock Grid.Row="1" 
                           Text="{Binding CurrentInput}" 
                           Style="{StaticResource DisplayTextBlockStyle}"/>
            </Grid>
        </Border>
        
        <!-- Buttons Area -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Row 1: Clear, +/-, %, ÷ -->
            <Button Grid.Row="0" Grid.Column="0" 
                    Content="C" 
                    Style="{StaticResource FunctionButtonStyle}"
                    Command="{Binding ClearCommand}"/>
            
            <Button Grid.Row="0" Grid.Column="1" 
                    Content="+/-" 
                    Style="{StaticResource FunctionButtonStyle}"
                    Command="{Binding ToggleSignCommand}"/>
            
            <Button Grid.Row="0" Grid.Column="2" 
                    Content="%" 
                    Style="{StaticResource FunctionButtonStyle}"
                    Command="{Binding PercentageCommand}"/>
            
            <Button Grid.Row="0" Grid.Column="3" 
                    Content="÷" 
                    Style="{StaticResource OperationButtonStyle}"
                    Command="{Binding OperationCommand}"
                    CommandParameter="/"/>
            
            <!-- Row 2: 7, 8, 9, × -->
            <Button Grid.Row="1" Grid.Column="0" 
                    Content="7" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="7"/>
            
            <Button Grid.Row="1" Grid.Column="1" 
                    Content="8" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="8"/>
            
            <Button Grid.Row="1" Grid.Column="2" 
                    Content="9" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="9"/>
            
            <Button Grid.Row="1" Grid.Column="3" 
                    Content="×" 
                    Style="{StaticResource OperationButtonStyle}"
                    Command="{Binding OperationCommand}"
                    CommandParameter="*"/>
            
            <!-- Row 3: 4, 5, 6, - -->
            <Button Grid.Row="2" Grid.Column="0" 
                    Content="4" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="4"/>
            
            <Button Grid.Row="2" Grid.Column="1" 
                    Content="5" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="5"/>
            
            <Button Grid.Row="2" Grid.Column="2" 
                    Content="6" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="6"/>
            
            <Button Grid.Row="2" Grid.Column="3" 
                    Content="-" 
                    Style="{StaticResource OperationButtonStyle}"
                    Command="{Binding OperationCommand}"
                    CommandParameter="-"/>
            
            <!-- Row 4: 1, 2, 3, + -->
            <Button Grid.Row="3" Grid.Column="0" 
                    Content="1" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="1"/>
            
            <Button Grid.Row="3" Grid.Column="1" 
                    Content="2" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="2"/>
            
            <Button Grid.Row="3" Grid.Column="2" 
                    Content="3" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="3"/>
            
            <Button Grid.Row="3" Grid.Column="3" 
                    Content="+" 
                    Style="{StaticResource OperationButtonStyle}"
                    Command="{Binding OperationCommand}"
                    CommandParameter="+"/>
            
            <!-- Row 5: 0, ., DEL, = -->
            <Button Grid.Row="4" Grid.Column="0" 
                    Content="0" 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DigitCommand}"
                    CommandParameter="0"/>
            
            <Button Grid.Row="4" Grid.Column="1" 
                    Content="." 
                    Style="{StaticResource NumberButtonStyle}"
                    Command="{Binding DecimalPointCommand}"/>
            
            <Button Grid.Row="4" Grid.Column="2" 
                    Content="DEL" 
                    Style="{StaticResource FunctionButtonStyle}"
                    Command="{Binding BackspaceCommand}"/>
            
            <Button Grid.Row="4" Grid.Column="3" 
                    Content="=" 
                    Style="{StaticResource EqualsButtonStyle}"
                    Command="{Binding EqualsCommand}"/>
        </Grid>
        
        <!-- Currency Toggle Button -->
        <Button Grid.Row="2" 
                Content="Currency Converter" 
                Style="{StaticResource FunctionButtonStyle}"
                Margin="10,5"
                Command="{Binding ToggleCurrencyPanelCommand}"/>
        
        <!-- Currency Conversion Panel -->
        <Border Grid.Row="3" 
                Background="{StaticResource TransparentSurfaceBrush}" 
                CornerRadius="10" 
                Margin="10,5,10,10"
                BorderThickness="1"
                BorderBrush="#333333"
                Visibility="{Binding IsCurrencyPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <local:CurrencyView DataContext="{Binding CurrencyVM}" Margin="5"/>
        </Border>
    </Grid>
</UserControl>