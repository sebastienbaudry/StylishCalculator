<UserControl x:Class="StylishCalculator.Views.CurrencyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StylishCalculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="380">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Currency Selection -->
            <RowDefinition Height="Auto"/> <!-- Result -->
            <RowDefinition Height="Auto"/> <!-- Last Updated -->
        </Grid.RowDefinitions>
        
        
        <!-- Currency Selection -->
        <Grid Grid.Row="1" Margin="5,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- From Currency -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="From:"
                           Style="{StaticResource LabelTextBlockStyle}"/>
                
                <ComboBox Grid.Row="1"
                          ItemsSource="{Binding AvailableCurrencies}"
                          SelectedItem="{Binding FromCurrency, Mode=TwoWay}"
                          Margin="5"
                          Padding="5"
                          Background="White"
                          Foreground="Black"
                          BorderBrush="{StaticResource NeonCyanBrush}"
                          FontWeight="Bold">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FlagImagePath}" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Code}" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Normal" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            
            <!-- Swap Button -->
            <Button Grid.Column="1"
                    Content="â‡„"
                    Command="{Binding SwapCurrenciesCommand}"
                    Style="{StaticResource FunctionButtonStyle}"
                    Width="40"
                    Height="40"
                    Margin="5,20,5,0"
                    VerticalAlignment="Bottom"/>
            
            <!-- To Currency -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="To:"
                           Style="{StaticResource LabelTextBlockStyle}"/>
                
                <ComboBox Grid.Row="1"
                          ItemsSource="{Binding AvailableCurrencies}"
                          SelectedItem="{Binding ToCurrency, Mode=TwoWay}"
                          Margin="5"
                          Padding="5"
                          Background="White"
                          Foreground="Black"
                          BorderBrush="{StaticResource NeonCyanBrush}"
                          FontWeight="Bold">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FlagImagePath}" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Code}" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Normal" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </Grid>
        
        <!-- Result -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ConversionResult}"
                   Style="{StaticResource CurrencyResultTextBlockStyle}"/>
        
        <!-- Last Updated -->
        <TextBlock Grid.Row="3"
                   Text="{Binding LastUpdated}"
                   Style="{StaticResource LabelTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Opacity="0.7"
                   Margin="0,0,0,5"/>
    </Grid>
</UserControl>